<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp11"
    android:layout_marginEnd="@dimen/dp11"
    android:layout_marginTop="@dimen/dp7"
    android:layout_marginBottom="@dimen/dp7"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/dp10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:transitionName="img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/shadow_bottom"
            android:src="@drawable/bottom_shadow"
            android:layout_alignBottom="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            />
        <ProgressBar
            android:id="@+id/progress_load_photo"
            style="@style/progressBar_small"
            android:layout_marginTop="@dimen/dp60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:padding="@dimen/dp10"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TxtView_Style"
            android:layout_marginEnd="@dimen/dp160"
            android:gravity="bottom"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_alignRight="@+id/layoutDate"
            android:layout_alignTop="@+id/layoutDate"
            android:layout_alignEnd="@+id/layoutDate"
            tools:ignore="UnknownId" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:background="@drawable/round_white"
            android:padding="@dimen/dp5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginTop="-50dp">

            <ImageView
                android:src="@drawable/ic_date"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginStart="@dimen/dp5"
                />
            <TextView
                android:id="@+id/publishedAt"
                style="@style/TxtView_Style_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp27"
                android:layout_marginEnd="@dimen/dp10"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            style="@style/TxtView_Style_Title"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:layout_below="@id/img"/>
        <TextView
            android:id="@+id/desk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:layout_below="@id/title"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/desk"/>
        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:layout_below="@id/desk"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp10"
            android:fontFamily="sans-serif-light"
            style="@style/TxtView_Style_Source"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_toEndOf="@id/source"
            style="@style/TxtView_Style_Time"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
</FrameLayout>