<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Txt">
        <item name="android:text">Top headlines</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="progressBar_small">
        <item name="android:textSize">10dp</item>
    </style>
    <style name="TxtView_Style">
        <item name="android:text">Author</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="TxtView_Style_Date">
        <item name="android:text">07 Декабрь 2019</item>
        <item name="android:textColor">#606060</item>
    </style>
    <style name="TxtView_Style_Title">
        <item name="android:text">title</item>
        <item name="android:textColor">#606060</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="TxtView_Style_Source">
        <item name="android:text">source</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TxtView_Style_Time">
        <item name="android:text">time</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
